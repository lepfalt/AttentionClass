<p id="notice"><%= notice %></p>

<h1>Class Groups</h1>

<table>
  <thead>
    <tr>
      <th>Responsible</th>
      <th>Discipline</th>
      <th>Class code</th>
      <th>Active</th>
      <th>Expiration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_groups.each do |class_group| %>
      <tr>
        <td><%= class_group.responsible %></td>
        <td><%= class_group.discipline %></td>
        <td><%= class_group.class_code %></td>
        <td><%= class_group.active %></td>
        <td><%= class_group.expiration_date %></td>
        <td><%= link_to 'Show', class_group %></td>
        <td><%= link_to 'Edit', edit_class_group_path(class_group) %></td>
        <td><%= link_to 'Destroy', class_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

