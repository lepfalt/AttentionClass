<main class="card-main card-table">
  <p id="notice"><%= notice %></p>

  <a href=<%= tasks_path %> data-toggle="tooltip" title="Voltar"><%= image_tag('back.png', id: "back", class: "icon-page") %></a>
  <div class="content-intern">
    <h1 class='title-page'>Turmas</h1>

    <table class="table table-bordered table-hover table-page">
      <thead class="header-table header-table-font">
        <tr>
          <th>Turma</th>
          <th>Disciplina</th> 
          <th>Data Encerramento</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="body-table">
        <% @class_groups.each do |class_group| %>
          <tr>
            <td><%= class_group.class_code %></td>
            <td><%= class_group.discipline %></td>
            <td><%= class_group.expiration_date %></td>
            <td><%= link_to 'Ver Tarefas', class_group, class: 'btn btn-default btn-view-item-table' %></td>
            <%# <td><%= link_to 'Alterar', edit_class_group_path(class_group) %>
            <%#</td>
            <%# <td><%= link_to 'Remover', class_group, method: :delete, data: { confirm: 'Tem certeza que deseja remover?' } %>
            <%# </td> %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Criar Turma', new_class_group_path, class: 'btn-new-item btn-new-iten-table' %>
  </div>
</main>
