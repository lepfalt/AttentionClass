<main class="card-main card-table">
  <a href=<%= tasks_board_path(current_user.id) %> data-toggle="tooltip" title="Voltar"><%= image_tag('back.png', id: "back", class: "icon-page") %></a>
  <div class="content-intern">
    <% if current_user.id == @class_groups.first&.user_id %>
      <h1 class='title-page'>Turmas</h1>

      <table class="table table-bordered table-hover table-page">
        <thead class="header-table header-table-font">
          <tr>
            <th>Turma</th>
            <th>Disciplina</th> 
            <th>Data Encerramento</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody class="body-table">
          <% @class_groups.each do |class_group| %>
            <tr>
              <td><%= class_group.class_code %></td>
              <td class="content-text-table"><%= class_group.discipline %></td>
              <td><%= class_group.expiration_date.strftime("%d/%m/%Y") %></td>
              <td><%= link_to 'Visualizar', class_group, class: 'btn btn-default btn-view-item-table' %></td>
              <td><%= link_to 'Remover', class_group, method: :delete, data: { confirm: 'Tem certeza que deseja remover ?' }, class:"btn btn-danger", style: 'margin: auto; width: 45%;' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <div class="btns-content">
        <%= link_to 'Criar Turma', new_class_group_path, class: 'btn-new-student btn-new-iten-table' %>
        <%= link_to 'Criar Tarefa', new_task_path, class: 'btn-new-item btn-new-iten-table btn-new-task' %>
      </div>
    <% else %>
      <h1 class='title-page'>Código identificador inválido</h1>
    <% end %>
  </div>
</main>
