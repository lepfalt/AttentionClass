<main class="card-main card-table">
  <p id="notice"><%= notice %></p>

  <a href="https://www.youtube.com.br" data-toggle="tooltip" title="Voltar"><%= image_tag('back.png', id: "back", class: "icon-page") %></a>
  <div class="content-intern">
    <h1 class='title-page'>Turma: T847ME</h1>

    <table class="table table-bordered table-hover table-page">
      <thead class="header-table header-table-font">
        <tr>
          <th>Tarefa</th>
          <th>Data Limite</th> 
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="body-table">
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
