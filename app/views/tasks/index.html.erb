            <td><%= task.status %></td>
            <td><%= link_to 'Ver', class_group, class: 'btn-view-item-table' %></td>
            <%# <td><%= link_to 'Edit', edit_task_path(task) %>
            <%# </td> %>
            <%# <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%# </td> %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <div class="btns-content">
      <%= link_to 'Criar Tarefa', new_task_path, class: 'btn-new-item btn-new-iten-table' %>
      <%= link_to 'Vincular Aluno', nil, class: 'btn-new-student' %>
    </div>
  <div>
</main>
